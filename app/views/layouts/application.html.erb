<!DOCTYPE html>
<html>
  <head>
    <title>The Club</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>

<% if logged_in? %>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
<a class="navbar-brand" <%= link_to "Le Club", club_path %></a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
<span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a class="nav-link" href="https://www.youtube.com/watch?v=MKrpadhcC8g&list=PL8sdkmMUDZ2N3U0KF8G8wx4923dbwX9zq&index=29"</a>Secret</li>      
      </ul>
    <a class="navbar-brand-custom">Connecté en tant que <%= @current_user.first_name %></a>      
    <a class="btn btn-danger btn" href="<%= logout_path %>" role="button" data-confirm="SUUUUUUR ?" data-method="DELETE">Déconnexion</a>
</div>

  <%else%>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" <%= link_to "Le Club", root_path %></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link" <%= link_to "S'inscrire", new_user_path %></a></li>      
        <li class="nav-item"><a class="nav-link" <%= link_to "Se connecter", login_path %></a></li>      
        </ul>
  </div>
  

<% end %>
</nav>


  <!--///////////////////////////////////////////////////////////////////////////////-->



  <% if flash[:info]%>
     <p class="alert alert-info"><%=flash[:info]%></p>
   <% elsif flash[:danger]%>
     <p class="alert alert-danger"><%=flash[:danger]%></p>
   <% elsif flash[:success]%>
     <p class="alert alert-success"><%=flash[:success]%></p>
   <% end%>
   
  
  </header>


  <body>

  <%= yield %>

   
  </body>
</html>
